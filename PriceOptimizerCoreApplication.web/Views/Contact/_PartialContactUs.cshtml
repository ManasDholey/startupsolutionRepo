@model Email
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions
{
    public string GetAntiXsrfRequestToken() => Xsrf.GetAndStoreTokens(Context).RequestToken;
}
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="wrapper">
                    <div class="row no-gutters">
                        <div class="col-lg-8 col-md-7 order-md-last d-flex align-items-stretch">
                            <div class="contact-wrap w-100 p-md-5 p-4">
                                <h3 class="mb-4">Get in touch</h3>
                                <div id="form-message-warning" class="mb-4"></div>
                                <div id="form-message-success" class="mb-4 alert alert-success" style="display:none;">
                                    Your message was sent, thank you!
                                </div>
                                <form asp-controller="Contact" asp-action="ContactUs" onsubmit="return jQueryAjaxPostContactUs(this);" class="contactForm">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken"
                                                   value="@GetAntiXsrfRequestToken()">
                                            <div class="form-group">
                                                <label class="label" asp-for="Name "></label>
                                                <input type="text" class="form-control" asp-for="Name" name="Name" id="name" placeholder="Name">
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label" asp-for="To"></label>
                                                <input type="email" class="form-control" name="To" asp-for="To" id="email" placeholder="Email">
                                                <span asp-validation-for="To" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" asp-for="Subject"></label>
                                                <input type="text" class="form-control" name="Subject" asp-for="Subject" id="subject" placeholder="Subject">
                                                <span asp-validation-for="Subject" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" asp-for="Body"></label>
                                                <textarea name="Body" class="form-control" id="message" asp-for="Body" cols="30" rows="4" placeholder="Message"></textarea>
                                                <span asp-validation-for="Body" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <div class="submitting">
                                                    <input type="submit" value="Send Message" class="btn btn-primary  Send-Message" />
                                                    @*<button type="submit" title="Send Message" value="Send Message" id="btnSendMessage" style="display:none" class="btn btn-primary loder-ajax">
                                                            <i class="fa fa-spinner fa-spin loder-ajax" style="display:none"></i> <span class="loder-ajax" style="display:none">Loading</span>
                                                    </button>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-5 d-flex align-items-stretch">
                            <div class="info-wrap bg-primary w-100 p-md-5 p-4">
                                <h3>Let's get in touch</h3>
                                <p class="mb-4">We're open for any suggestion or just to have a chat</p>
