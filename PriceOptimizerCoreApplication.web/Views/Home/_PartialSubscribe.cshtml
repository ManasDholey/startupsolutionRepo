@model Subscribe
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions
{
    public string GetAntiXsrfRequestToken() => Xsrf.GetAndStoreTokens(Context).RequestToken;
}
<section class="ftco-section ftco-no-pb ftco-no-pt bg-secondary">
    <div class="container py-5">
        <div class="row">
            
            <div class="col-md-7 d-flex align-items-center">
                <h2 class="mb-3 mb-sm-0" style="color:black; font-size: 22px;">Subscribe for Your Free 1st Accounting Consultation</h2>
            </div>
            <div class="col-md-5 d-flex align-items-center">
                <form id="subscribe-form-id" asp-controller="Home" asp-action="Subscribe" onsubmit="return jQueryAjaxPostSubscribe(this);" class="subscribe-form">
                    <div class="form-group">
                        <input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken"
                               value="@GetAntiXsrfRequestToken()">
                    </div>
                    <div>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex">

                        <input type="text" class="form-control" name="EmailAddress" asp-for="EmailAddress" id="email" placeholder="Enter email address">
                        <input type="submit" value="Subscribe" class="submit px-3">

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
