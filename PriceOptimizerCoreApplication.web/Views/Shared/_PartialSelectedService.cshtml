@model ServiceRequest
@{
    var controller = ViewContext.RouteData.Values["Controller"];
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions
{
    public string GetAntiXsrfRequestToken() => Xsrf.GetAndStoreTokens(Context).RequestToken;
}
<form id="myForm" asp-controller="@controller" asp-action="GetHtml" onsubmit="return jQueryAjaxPostService(this);" class="contactForm">
    <div class="form-group">
        <input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken"
               value="@GetAntiXsrfRequestToken()">
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Name" asp-for="Name ">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" name="Name" id="txtName" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="email" asp-for="Email">Email:</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" asp-for="Email" name="Email" id="txtEmail" placeholder="Enter email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Moblile" asp-for="Moblile">Moblile:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="Moblile" name="Moblile" id="txtMoblile" placeholder="Enter Moblile">
            <span asp-validation-for="Moblile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="ServiceName" asp-for="ServiceName">Service Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="ServiceName" name="ServiceName" id="txtServiceName" placeholder="Enter Service Name">
            <span asp-validation-for="ServiceName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Description" asp-for="Description">Description:</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Description" name="Description" id="txtDescription" placeholder="Enter Description" rows="4" cols="50">
            </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary pull-right submit-form">Submit</button>
        </div>
    </div>
</form>